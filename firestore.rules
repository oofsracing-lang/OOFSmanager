rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access (for Dashboard/Standings)
    match /seasons/{seasonId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to calculated standings
    match /standings/{seasonId} {
      allow read: if true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
